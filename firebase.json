{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  },
  "functions": {
    "source": "fintech",
    "runtime": "python312",
    "memory": "1GB",
    "ignore": [
      "venv/**",
      ".venv/**",
      "env/**",
      ".env/**",
      "**/__pycache__/**",
      "**/node_modules/**",
      "**/*.pyc",
      "**/*.pyo",
      "**/*.pyd",
      "**/site-packages/**",
      "**/dist-packages/**",
      "**/lib/python*/**",
      "**/.pytest_cache/**",
      "**/.coverage",
      "**/htmlcov/**"
    ],
    "predeploy": [
      "pip install -r requirements.txt"
    ],
    "build": {
      "excludes": ["**/node_modules/**", "**/venv/**", "**/site-packages/**"],
      "python": {
        "compileAll": {
          "excludes": ["**/venv/**", "**/site-packages/**", "**/lib/**", "**/node_modules/**"]
        }
      }
    }
  }
}
